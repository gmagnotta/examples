#!/bin/bash

set -e

echo "Before assembling"

echo "Deleting /deployments/ROOT.war"
rm -rf /deployments/ROOT.war

echo "invoking assemble"
/usr/local/s2i/assemble

echo "renaming /deployments/hello-tomcat.war to /deployments/ROOT.war"
mv /deployments/hello-tomcat.war /deployments/ROOT.war

echo "deleting /tmp/src directory"
rm -rf /tmp/src
